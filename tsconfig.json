{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "types": [
      "vite/client",
      "dom-webcodecs"
    ],
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "demo",
    "src/__tests__"
  ],
}